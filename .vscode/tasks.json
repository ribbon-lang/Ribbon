{
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
    },
    "tasks": [
        {
            "label": "check",
            "type": "shell",
            "command": "zig build check -freference-trace --prominent-compile-errors",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "run-rvm",
            "type": "shell",
            "command": "zig build run-rvm -freference-trace --prominent-compile-errors",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run-rir",
            "type": "shell",
            "command": "zig build run-rir -freference-trace --prominent-compile-errors",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run-rml",
            "type": "shell",
            "command": "zig build run-rml -freference-trace --prominent-compile-errors",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
